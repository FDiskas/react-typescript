{
    "name": "typescript",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "start": "webpack-dev-server --open --content-base dist --env=dev --progress",
        "build": "rimraf ./dist && webpack -p --display-error-details",
        "prebuild:start": "yarn build",
        "build:start": "serve -s -o -C -n dist",
        "lint": "tslint --project tsconfig.json",
        "test": "jest --env=jsdom --watch",
        "test:ci": "jest --env=jsdom --no-cache --maxWorkers=2",
        "test:coverage": "NODE_ENV=test jest --env=jsdom --no-cache --coverage",
        "prepush": "yarn test:ci -- --notify && yarn lint"
    },
    "devDependencies": {
        "@types/enzyme": "2.8.7",
        "@types/extract-text-webpack-plugin": "^2.1.0",
        "@types/html-webpack-plugin": "^2.28.0",
        "@types/jest": "^21.1.0",
        "@types/node": "^8.0.28",
        "@types/optimize-css-assets-webpack-plugin": "1.3.1",
        "@types/react": "^16.0.18",
        "@types/react-dom": "^16.0.2",
        "@types/react-hot-loader": "^3.0.5",
        "@types/react-test-renderer": "^16.0.0",
        "@types/webpack": "^3.0.10",
        "@types/webpack-env": "^1.13.1",
        "awesome-typescript-loader": "^3.2.3",
        "babel-core": "6.26.0",
        "babel-loader": "7.1.2",
        "babel-polyfill": "^6.26.0",
        "babel-preset-es2015": "6.24.1",
        "babel-preset-react": "6.24.1",
        "babel-preset-stage-0": "6.24.1",
        "cheerio": "^1.0.0-rc.2",
        "css-loader": "^0.28.7",
        "enzyme": "^3.0.0",
        "enzyme-adapter-react-16": "^1.0.2",
        "extract-text-webpack-plugin": "^3.0.0",
        "html-webpack-plugin": "^2.30.1",
        "husky": "^0.14.3",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^21.2.1",
        "json-d-ts": "^1.0.1",
        "json-loader": "0.5.7",
        "node-sass": "^4.5.3",
        "optimize-css-assets-webpack-plugin": "3.2.0",
        "raf": "^3.4.0",
        "react-hot-loader": "^3.0.0-beta.7",
        "react-test-renderer": "16",
        "resolve-url-loader": "^2.1.0",
        "rimraf": "^2.6.1",
        "sass-loader": "^6.0.6",
        "serve": "6.3.1",
        "source-map-loader": "^0.2.1",
        "style-loader": "^0.18.2",
        "ts-node": "3.3.0",
        "tslint": "^5.7.0",
        "tslint-config-airbnb": "5.2.1",
        "tslint-react": "^3.2.0",
        "tsutils": "^2.12.1",
        "typescript": "^2.5.3",
        "typescript-babel-jest": "^1.0.5",
        "typings-for-css-modules-loader": "^1.7.0",
        "webpack": "^3.5.6",
        "webpack-dev-server": "^2.7.1",
        "webpack-hot-middleware": "^2.19.1"
    },
    "dependencies": {
        "react": "^16.0.0",
        "react-dom": "^16.0.0-rc.3"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/?(*.)test.tsx"
        ],
        "moduleFileExtensions": [
            "tsx",
            "ts",
            "js"
        ],
        "setupFiles": [
            "<rootDir>/config/jest/bootstrap.js"
        ],
        "transform": {
            "^.+\\.tsx?$": "typescript-babel-jest"
        },
        "moduleNameMapper": {
            "^.+\\.s?css$": "identity-obj-proxy"
        },
        "coverageDirectory": "./coverage/",
        "collectCoverage": true,
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "^.+\\.test.tsx$",
            "^.+\\.d.ts$"
        ]
    }
}
