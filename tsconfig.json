{
    "version": "2.1.4",
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "skipDefaultLibCheck": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "allowJs": true,
        "checkJs": false,
        "sourceMap": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "pretty": true,
        "outDir": "./dist",
        "rootDirs": [
            "./src/client",
            "./src/server",
            "./config"
        ],
        "preserveConstEnums": true,
        "removeComments": true,
        "importHelpers": false,
        "typeRoots": [
            "node_modules/json-d-ts",
            "node_modules/@types",
            "./typings"
        ],
        "lib": [
            "dom",
            "es2016",
            "es2017.object"
        ],
        "skipLibCheck": true,
        "paths": {
            "*": ["./src/*"]
        },
        "baseUrl": "."
    },
    "exclude": [
        "node_modules",
        "./src/client/**/*.test.tsx",
        "./src/server/**/*"
    ],
    "include": [
        "./src/**/*"
    ]
}
