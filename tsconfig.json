{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "baseUrl": "src",
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "allowJs": true,
        "sourceMap": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "typeRoots": [
            "./node_modules/json-d-ts",
            "./node_modules/@types"
        ],
        "lib": ["es6", "dom"]
    },
    "exclude": [
        "**/*.test.tsx",
        "typings/browser.d.ts",
        "typings/browser",
        "node_modules",
        "./lib/__tests__"
    ]
}
