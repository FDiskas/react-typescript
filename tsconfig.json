{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "node",
        "baseUrl": "src",
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "removeComments": true
    },
    "exclude": [
        "**/*.test.tsx",
        "typings/browser.d.ts",
        "typings/browser",
        "node_modules",
        "./lib/__tests__"
    ]
}
